<div id="waiting-popup">Waiting For Input</div>

<script>
const subtitles = ["gucci bucket hat","tung tung tung sahur","hi (:","gatekeep ts"];
document.getElementById("subtitle").textContent = subtitles[Math.floor(Math.random()*subtitles.length)];

const popup = document.getElementById("popup");
document.getElementById("closePopup").onclick = () => {
    popup.classList.add("hide");
    popup.querySelector(".popup").classList.add("hide");
    setTimeout(()=>popup.remove(),350);
};

const homeBtn = document.getElementById("home-btn");
const gamesBtn = document.getElementById("games-btn");
const toolsBtn = document.getElementById("tools-btn");
const appsBtn = document.getElementById("apps-btn");
const settingsBtn = document.getElementById("settings-btn");

const loader = document.getElementById("loader");
const home = document.getElementById("home");
const contentArea = document.getElementById("content-area");
const gamesFrame = document.getElementById("games-frame");
const toolsFrame = document.getElementById("tools-frame");
const appsFrame = document.getElementById("apps-frame");
const settingsPage = document.getElementById("settings-page");

const icons = document.querySelectorAll(".nav-icon");

let gamesLoaded=false, toolsLoaded=false, appsLoaded=false, loadingPage=false;

function setActive(btn){ icons.forEach(i=>i.classList.remove("active")); btn.classList.add("active"); }
function fadeOutElement(el){ el.classList.remove("fade-in"); el.classList.add("fade-out"); }
function fadeInElement(el){ el.classList.remove("fade-out"); el.classList.add("fade-in"); }

function showHome(){
    fadeOutElement(contentArea);
    fadeOutElement(settingsPage);
    setTimeout(()=>{
        home.style.display="block";
        fadeInElement(home);
        contentArea.style.display="none";
        settingsPage.style.display="none";
    },300);
}

function showPage(type){
    if(loadingPage) return;

    fadeOutElement(home);

    setTimeout(()=>{
        home.style.display="none";
        contentArea.style.display="none";
        settingsPage.style.display="none";

        if(type==="games"){
            contentArea.style.display="flex";
            gamesFrame.classList.remove("hidden");
            toolsFrame.classList.add("hidden");
            appsFrame.classList.add("hidden");
            fadeInElement(contentArea);
        }
        else if(type==="tools"){
            contentArea.style.display="flex";
            toolsFrame.classList.remove("hidden");
            gamesFrame.classList.add("hidden");
            appsFrame.classList.add("hidden");
            fadeInElement(contentArea);
        }
        else if(type==="apps"){
            contentArea.style.display="flex";
            appsFrame.classList.remove("hidden");
            gamesFrame.classList.add("hidden");
            toolsFrame.classList.add("hidden");
            fadeInElement(contentArea);
        }
        else if(type==="settings"){
            settingsPage.style.display="flex";
            fadeInElement(settingsPage);
        }
    },300);
}

function showLoader(callback){
    loadingPage=true;
    loader.classList.remove("hidden");
    setTimeout(()=>{
        loader.classList.add("hidden");
        callback();
        loadingPage=false;
    },2000);
}

async function loadFrame(frame,url,done){
    const res=await fetch(url+"?t="+Date.now(),{cache:"no-cache"});
    let html=await res.text();

    const doc=frame.contentDocument;
    doc.open();
    doc.write(html);
    doc.close();

    setTimeout(()=>{
        doc.querySelectorAll("script").forEach(old=>{
            const s=document.createElement("script");
            [...old.attributes].forEach(a=>s.setAttribute(a.name,a.value));
            if(old.src) s.src=old.src+"?t="+Date.now();
            else s.textContent=old.textContent;
            old.replaceWith(s);
        });
        done();
    },50);
}

homeBtn.onclick=()=>{ setActive(homeBtn); showHome(); };

gamesBtn.onclick=()=>{
    if(loadingPage) return;
    setActive(gamesBtn);
    if(!gamesLoaded){
        showPage("games");
        showLoader(()=>loadFrame(gamesFrame,"https://cdn.jsdelivr.net/gh/dotdmi/rndm@main/books",()=>gamesLoaded=true));
    } else showPage("games");
};

toolsBtn.onclick=()=>{
    if(loadingPage) return;
    setActive(toolsBtn);
    if(!toolsLoaded){
        showPage("tools");
        showLoader(()=>loadFrame(toolsFrame,"https://cdn.jsdelivr.net/gh/dotdmi/rndm@main/math",()=>toolsLoaded=true));
    } else showPage("tools");
};

appsBtn.onclick=()=>{
    if(loadingPage) return;
    setActive(appsBtn);
    if(!appsLoaded){
        showPage("apps");
        showLoader(()=>loadFrame(appsFrame,"https://cdn.jsdelivr.net/gh/dotdmi/rndm@main/homework",()=>appsLoaded=true));
    } else showPage("apps");
};

settingsBtn.onclick=()=>{ setActive(settingsBtn); showPage("settings"); };

/* ===== SETTINGS STATE ===== */
let panicKey = localStorage.getItem('panicKey') || 'p';
let customURL = localStorage.getItem('panicUrl') || 'https://www.google.com';
let openInNewTab = localStorage.getItem('openInNewTab') === 'true';
let waitingForKey = false;

const waitingPopup = document.getElementById("waiting-popup");

// Init display
document.getElementById("panic-key-display").textContent = panicKey;
document.getElementById("custom-url-display").textContent = customURL;
document.getElementById("new-tab-status").textContent = openInNewTab ? 'enabled' : 'disabled';
document.getElementById("new-tab-toggle").checked = openInNewTab;

/* ===== ABOUT:BLANK ===== */
document.getElementById("open-blank-btn").onclick = () => {
    const win = window.open("about:blank","_blank");
    const html = document.documentElement.outerHTML;
    win.document.open();
    win.document.write(html);
    win.document.close();
};

/* ===== TAB CLOAKING ===== */
function applyCloak(title, icon) {
    if (title === 'reset') {
        document.title = 'Vortix';
        let fav = document.querySelector("link[rel*='icon']");
        if(fav) fav.href = '';
    } else {
        document.title = title;
        let fav = document.querySelector("link[rel*='icon']") || document.createElement('link');
        fav.rel = 'icon';
        fav.href = icon;
        document.head.appendChild(fav);
    }
}

/* ===== PANIC KEY CHANGE ===== */
document.getElementById("change-panic-key-btn").onclick = () => {
    waitingForKey = true;
    waitingPopup.style.display = "block";
};

/* ===== SET PANIC URL ===== */
document.getElementById("set-url-btn").onclick = () => {
    let input = document.getElementById("url-input").value.trim();
    if(input){
        if(!/^https?:\/\//i.test(input)) input = "https://" + input;
        customURL = input;
        localStorage.setItem('panicUrl', customURL);
        document.getElementById("custom-url-display").textContent = customURL;
        document.getElementById("url-input").value = "";
    }
};

/* ===== NEW TAB TOGGLE ===== */
function toggleNewTab(enabled) {
    openInNewTab = enabled;
    localStorage.setItem('openInNewTab', enabled);
    document.getElementById("new-tab-status").textContent = enabled ? 'enabled' : 'disabled';
}

/* ===== HISTORY CLEANER ===== */
function clearHistory() {
    if(confirm('This will attempt to clear history and close the tab. Continue?')){
        window.location.replace('about:blank');
        window.close();
    }
}

/* ===== EXPORT SETTINGS ===== */
function exportSettings() {
    const settings = {
        panicKey: localStorage.getItem('panicKey'),
        panicUrl: localStorage.getItem('panicUrl'),
        openInNewTab: localStorage.getItem('openInNewTab')
    };
    const blob = new Blob([JSON.stringify(settings, null, 2)], { type:'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'vortix-settings.json';
    a.click();
    URL.revokeObjectURL(url);
}

/* ===== IMPORT SETTINGS ===== */
function importSettings(event) {
    const file = event.target.files[0];
    if(!file) return;
    const reader = new FileReader();
    reader.onload = function(e) {
        try {
            const settings = JSON.parse(e.target.result);
            if(settings.panicKey) localStorage.setItem('panicKey', settings.panicKey);
            if(settings.panicUrl) localStorage.setItem('panicUrl', settings.panicUrl);
            if(settings.openInNewTab !== undefined) localStorage.setItem('openInNewTab', settings.openInNewTab);
            alert('Settings imported! Refreshing...');
            location.reload();
        } catch(err) {
            alert('Invalid settings file');
        }
    };
    reader.readAsText(file);
}

/* ===== RESET ALL SETTINGS ===== */
function resetAllSettings() {
    if(confirm('Are you sure you want to reset all settings?')){
        localStorage.removeItem('panicKey');
        localStorage.removeItem('panicUrl');
        localStorage.removeItem('openInNewTab');
        alert('Settings reset! Refreshing...');
        location.reload();
    }
}

/* ===== KEYDOWN HANDLER ===== */
document.addEventListener("keydown", (e) => {
    if(waitingForKey){
        panicKey = e.key.toLowerCase();
        localStorage.setItem('panicKey', panicKey);
        document.getElementById("panic-key-display").textContent = panicKey;
        waitingForKey = false;
        waitingPopup.style.display = "none";
    } else if(e.key.toLowerCase() === panicKey){
        window.open(customURL, "_blank");
    }
});
</script>
</body>
</html>
